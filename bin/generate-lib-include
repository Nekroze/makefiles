#!/usr/bin/env bash
set -euo pipefail
source "$(dirname ${BASH_SOURCE[0]})/../include/common.bash"
shopt -s nullglob

# This script outputs Makefile syntax that includes the makefiles present in the
# "make.d" directory of each installed library.

echo "# DO NOT MODIFY"
echo "# This file was generated by the generate-lib-include script."
echo

for F in $MF_ROOT/lib/*/make.d/*.mk; do
    echo 'include $(MF_ROOT)'${F#$MF_ROOT}
done
