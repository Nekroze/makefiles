#!/usr/bin/env bash
set -euo pipefail

workload=$1

defer=$(mktemp)
env_file=$(mktemp)
chmod +x "$defer"

function leave {
    "$defer"
    rm "$defer" "$env_file"
}
trap leave EXIT

i=3 # account for $0, $workflow and "--" argument

for port in ${@:2}; do
    if [[ "$port" == "--" ]]; then
        break
    fi

    name="${workload}_${port}"
    local_port="$((32768 + $RANDOM))"

    telepresence intercept \
        "$name" \
        --workload "$workload" \
        --port "${local_port}:${port}" \
        --env-file="${env_file}"

    echo "telepresence leave '${name}'" >> "$defer"
    ((i++))

    echo "TELEPRESENCE_PORT_${port}=$local_port" >> "$env_file"

    set -o allexport
    source "$env_file"
    set +o allexport
done

${@:$i}
